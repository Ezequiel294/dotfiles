// -*- mode: jsonc -*-
{
  "layer": "top", // Waybar at top layer
  "position": "top", // Waybar position (top|bottom|left|right)
  "spacing": 2, // Gaps between modules (4px)

  // Choose the order of the modules
  "modules-left": [
    "sway/workspaces",
    "sway/mode",
    "sway/scratchpad",
    "custom/media",
  ],

  "modules-center": ["clock"],

  "modules-right": [
    "sway/language",
    "custom/separator",

    "idle_inhibitor",
    "custom/separator",

    "battery",
    "custom/separator",

    "pulseaudio",
    "custom/separator",

    //"power-profiles-daemon",
    //"custom/separator",

    "memory",
    "custom/separator",

    "cpu",
    "custom/separator",

    //"temperature",
    //"custom/separator",

    //"keyboard-state",
    //"custom/separator",

    "network",
    "custom/separator",

    "tray",
  ],

  "custom/separator": {
    "format": "|",
    "interval": "once",
    "tooltip": false,
  },

  "keyboard-state": {
    "numlock": true,
    "capslock": true,
    "format": "{name} {icon}",
    "format-icons": {
      "locked": "ÔÄ£",
      "unlocked": "ÔÇú",
    },
  },

  "sway/mode": {
    "format": "<span style=\"italic\">{}</span>",
  },

  "sway/scratchpad": {
    "format": "{icon} {count}",
    "show-empty": false,
    "format-icons": ["", "Ôãí"],
    "tooltip": true,
    "tooltip-format": "{app}: {title}",
  },

  "idle_inhibitor": {
    "format": "{icon} ",
    "format-icons": {
      "activated": "ÔÅÆ",
      "deactivated": "ÔÅ∞",
    },
  },

  "tray": {
    "icon-size": 18,
    "spacing": 5,
  },

  "clock": {
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
    "format-alt": "{:%Y-%m-%d}",
  },

  "memory": {
    "format": "{}% ÓøÖ ",
  },

  "cpu": {
    "format": "{usage}% Ôãõ ",
    "tooltip": true,
  },
  "temperature": {
    // "thermal-zone": 2,
    // "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
    "critical-threshold": 80,
    // "format-critical": "{temperatureC}¬∞C {icon}",
    "format": "{temperatureC}¬∞C {icon}",
    "format-icons": ["Ôù´", "Ôãâ", "Ôù©"],
  },

  "backlight": {
    // "device": "acpi_video1",
    "format": "{percent}% {icon} ",
    "format-icons": ["Óéç", "Óèì", "Óèë", "Óèè", "Óèé", "Óèç", "Óèä", "Óèà", "Óéõ"],
  },

  "battery": {
    "states": {
      "warning": 30,
      "critical": 15,
    },
    "format": "{capacity}% {icon}",
    "format-full": "{capacity}% {icon}",
    "format-charging": "{capacity}% Ôá¶ ",
    "format-plugged": "{capacity}% Ôá¶ ",
    "format-alt": "{time} {icon}",
    "format-icons": ["Û∞Å∫", "Û∞Åº", "Û∞Åæ", "Û∞ÇÄ", "Û∞Åπ"],
  },
  "power-profiles-daemon": {
    "format": "{icon}",
    "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
    "tooltip": true,
    "format-icons": {
      "default": "ÔÉß",
      "performance": "ÔÉß",
      "balanced": "Ôâé",
      "power-saver": "ÔÅ¨",
    },
  },

  "network": {
    // "interface": "wlp2*", // (Optional) To force the use of this interface
    "format-wifi": "{essid}  Ôá´ ",
    "format-ethernet": "{ifname}  Û∞àÄ ",
    "tooltip-format": "{ifname} via {gwaddr}",
    "format-linked": "{ifname} (No IP)",
    "format-disconnected": "WAN Disconnected",
    "format-alt": "{ifname}: {ipaddr}/{cidr}",
  },

  "pulseaudio": {
    // "scroll-step": 1, // %, can be a float
    "format": "{volume}% {icon}  {format_source}",
    "format-bluetooth": "{volume}% {icon}Ôäî {format_source}",
    "format-bluetooth-muted": "Óª®  {icon}Ôäî {format_source}",
    "format-muted": "{volume}% Óª®  {format_source}",
    "format-source": "ÔÑ∞ ",
    "format-source-muted": "ÔÑ± ",
    "format-icons": {
      "headphone": "ÔÄ•",
      "phone": "ÔÇï",
      "portable": "ÔÇï",
      "car": "ÔÜπ",
      "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"],
    },
    "on-click": "pwvucontrol",
  },

  "custom/media": {
    "format": "{icon} {text}",
    "return-type": "json",
    "max-length": 40,
    "format-icons": {
      "spotify": "ÔÜº",
      "default": "üéú",
    },
    "escape": true,
    "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null", // Script in resources folder
    // "exec": "$HOME/.config/waybar/mediaplayer.py --player spotify 2> /dev/null" // Filter player based on name
  },
}
