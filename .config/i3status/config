# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        output_format = "i3bar"
        colors = true
        interval = 5
}

order += "battery all"
order += "volume master"
order += "wireless _first_"
order += "ethernet _first_"
#order += "cpu_usage"
#order += "memory"
order += "tztime local"

wireless _first_ {
        format_up = "    %essid %ip"
        format_down = ""
}

ethernet _first_ {
        format_up = "󰈀   %ip"
        format_down = ""
}

battery all {
        format = "%status %percentage"
        status_full = "󰁹 "
        status_chr = " "
        status_bat = "󰁾 "
        status_idle = "󰁾 IDLE "
        last_full_capacity = true
        format_percentage = "%.00f%s"
        format_down = ""
}

#cpu_usage {
#        format = "CPU %usage"
#}

#memory {
#        format = "RAM %percentage_used"
#}

volume master {
    format = "    %volume"
    format_muted = "    Muted"
    device = "default"
}


tztime local {
        format = "   %d/%m  %H:%M"
}
